---
interface Props {
  href: string
  text: string
}

const { href, text } = Astro.props
---

<a
  class="highlight-hover relative py-0.8 transition-colors after:bottom-0.35em hover:(c-primary font-medium)"
  href={href}
  target="_blank"
  rel="noopener noreferrer"
>
  <span class="absolute inset-0 flex items-center justify-center whitespace-nowrap transition-font-weight">
    {text}
  </span>
  <span
    class="inline-block font-medium opacity-0"
    aria-hidden="true"
  >
    {text}
  </span>
</a>
